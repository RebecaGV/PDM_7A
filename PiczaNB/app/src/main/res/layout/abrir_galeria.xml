<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:isScrollContainer="false"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/btnCamara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camara" />

        <Button
            android:id="@+id/abrirG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/mostrar_im"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtros"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/filtros"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="423dp" />

        <SeekBar
            android:id="@+id/S1"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:visibility="gone"
            android:min="-50"
            android:max="50"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="523dp"
            />

        <SeekBar
            android:id="@+id/barritaR"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:visibility="gone"
            android:min="-255"
            android:max="255"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="474dp" />

        <SeekBar
            android:id="@+id/barritaG"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:visibility="gone"
            android:min="-255"
            android:max="255"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="572dp" />

        <SeekBar
            android:id="@+id/barritaB"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:visibility="gone"
            android:min="-255"
            android:max="255"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="621dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revertir"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="672dp" />

        <Button
            android:id="@+id/btnPrevia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vista Previa"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="670dp" />

        <Button
            android:id="@+id/btnAplicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicar"
            tools:layout_editor_absoluteX="290dp"
            tools:layout_editor_absoluteY="672dp" />

    </LinearLayout>


</LinearLayout>